{
  "type": "module",
  "private": true,
  "scripts": {
    "base:dev": "cross-env NODE_ENV=development bun --env-file=./.env.development.local",
    "base:prod": "cross-env NODE_ENV=production bun --env-file=./.env.production.local",
    "bootstrap:prod": "bun run base:prod -- run ./src/core/bootstrap/index.ts",
    "build": "bun run base:prod -- run ./src/core/build.ts",
    "depcheck": "depcheck",
    "dev": "bun run base:dev -- --watch run ./src/core/entrypoints/development.ts",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "eslint --fix --max-warnings 0",
    "typecheck": "tsc",
    "unused-exports": "ts-unused-exports ./tsconfig.json"
  },
  "dependencies": {
    "consola": "^3.4.2",
    "es-toolkit": "^1.41.0",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@kikiutils/eslint-config": "^4.0.1",
    "@kikiutils/tsconfigs": "^5.0.5",
    "@types/bun": "^1.3.1",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "mlly": "^1.8.0",
    "rimraf": "^6.1.0",
    "ts-unused-exports": "^11.0.1",
    "type-fest": "^5.1.0",
    "typescript": "^5.9.3",
    "unimport": "^5.5.0"
  }
}
